# Example platformio.ini configuration for BThomeV2 library
# Copy this to your project's platformio.ini and modify as needed

# ESP32 configuration
[env:esp32]
platform = espressif32
board = esp32dev
framework = arduino
lib_deps =
    the78mole/BThomeV2
monitor_speed = 115200

# ESP32-S3 configuration
[env:esp32s3]
platform = espressif32
board = esp32-s3-devkitc-1
framework = arduino
lib_deps =
    the78mole/BThomeV2
monitor_speed = 115200

# ESP32-C3 configuration
[env:esp32c3]
platform = espressif32
board = esp32-c3-devkitm-1
framework = arduino
lib_deps =
    the78mole/BThomeV2
monitor_speed = 115200

# nRF52840 Feather configuration
[env:nrf52840]
platform = nordicnrf52
board = adafruit_feather_nrf52840
framework = arduino
lib_deps =
    the78mole/BThomeV2
monitor_speed = 115200

# nRF52832 Feather configuration
[env:nrf52832]
platform = nordicnrf52
board = adafruit_feather_nrf52832
framework = arduino
lib_deps =
    the78mole/BThomeV2
monitor_speed = 115200
